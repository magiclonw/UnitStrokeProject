<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:background="@drawable/shape_white_button"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/customdialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:id="@+id/customdialog_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/customdialog_content"
            android:background="@color/line" />

        <TextView
            android:id="@+id/customdialog_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customdialog_line"
            android:gravity="center"
            android:text="知道了"
            android:padding="15dp"
            android:textColor="@color/blue"
            android:textSize="15dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
